<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <div class="card">
        <div class="card-body">

          <h2>Edit <%= resource_name.to_s.humanize %></h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal' }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <img src="https://api.multiavatar.com/<%= current_user.email %>.png?apikey=LQqxd9WmsPl4aE" alt="User Avatar" class="img-thumbnail" width="100" height="100">

            <div class="form-group" style="margin-top: 10px">
              <%= f.label :username, class: 'control-label' %>
              <%= f.text_field :username, class: 'form-control' %>
            </div>

            <div class="form-group" style="margin-top: 10px">
              <%= f.label :profile, class: 'control-label' %>
              <%= f.text_area :profile, class: 'form-control' %>
            </div>

            <div class="form-group" style="margin-top: 10px">
              <%= f.label :password, class: 'control-label' %> <i>(leave blank if you don't want to change it)</i>
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
              <% if @minimum_password_length %>
                <small><em><%= @minimum_password_length %> characters minimum</em></small>
              <% end %>
            </div>

            <div class="form-group" style="margin-top: 10px">
              <%= f.label :password_confirmation, class: 'control-label' %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
            </div>

            <div class="form-group" style="margin-top: 10px">
              <%= f.label :current_password, class: 'control-label' %> <i>(we need your current password to confirm your changes)</i>
              <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
            </div>

            <div class="actions" style="margin-top: 10px">
              <%= f.submit "Update", class: 'btn btn-primary' %>
            </div>
          <% end %>

          <hr>

          <h3>Cancel my account</h3>
          <div  style="margin-top: 10px">
            <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %>
          </div>

          <hr>

          <div style="margin-top: 10px">
            <%= link_to "Back", :back, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
